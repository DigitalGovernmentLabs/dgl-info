{
  "name": "dgl-info",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:client": "nuxt-ts -p 41441",
    "dev:server": "npm run dev --prefix server",
    "dev:aspida": "aspida --watch",
    "build": "run-p build:client build:server",
    "prebuild:client": "run-s generate:aspida",
    "build:client": "nuxt-ts generate",
    "build:server": "npm run build --prefix server",
    "generate": "run-p generate:*",
    "generate:aspida": "aspida",
    "generate:server": "npm run generate --prefix server",
    "install:server": "cd server && yarn install",
    "lint": "run-s lint:eslint lint:stylelint",
    "lint:eslint": "eslint --ext .ts,.js,.vue .",
    "lint:stylelint": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "fix": "run-s fix:eslint fix:stylelint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "pretypecheck": "npm run generate",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "tsc --noEmit",
    "typecheck:server": "npm run typecheck --prefix server",
    "deploy:front": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "migration:generate": "npm run migration:generate --prefix server",
    "migration:run": "npm run migration:run --prefix server",
    "migration:revert": "npm run migration:revert --prefix server",
    "start": "run-p start:*",
    "start:client": "nuxt-ts serve",
    "start:server": "npm start --prefix server",
    "preinstall": "npx only-allow yarn",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "dependencies": {
    "@aspida/axios": "^1.5.0",
    "@nuxt/typescript-runtime": "^2.0.1",
    "@nuxtjs/axios": "^5.13.1",
    "@nuxtjs/vuetify": "^1.11.3",
    "nuxt": "^2.15.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nuxt/types": "^2.15.0",
    "@nuxt/typescript-build": "^2.0.5",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}

{
  "name": "dgl-info",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:front": "nuxt-ts",
    "dev:server": "cd server && node_modules/.bin/webpack --watch --mode=development",
    "dev:aspida": "aspida --watch",
    "dev:frourio": "cd server && node_modules/.bin/frourio --watch",
    "dev:typeormer": "cd server && node_modules/.bin/typeormer --watch",
    "build:front": "aspida && nuxt-ts generate",
    "build:frourio": "cd server && node_modules/.bin/frourio",
    "build:typeormer": "cd server && node_modules/.bin/typeormer",
    "install:server": "cd server && yarn install",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:style -- --fix",
    "typecheck": "aspida && npm run build:typeormer && npm run build:frourio && tsc --noEmit && tsc --noEmit -p server",
    "deploy:front": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "migration:generate": "cd server && ts-node node_modules/.bin/typeorm migration:generate -n Task",
    "migration:run": "cd server && ts-node node_modules/.bin/typeorm migration:run",
    "migration:revert": "cd server && ts-node node_modules/.bin/typeorm migration:revert"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "trailingComma": "none",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  },
  "dependencies": {
    "@aspida/axios": "^0.11.3",
    "@nuxt/typescript-runtime": "^2.0.0",
    "@nuxtjs/axios": "^5.12.2",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "nuxt": "^2.14.5"
  },
  "devDependencies": {
    "@nuxt/types": "^2.14.5",
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-config-typescript": "^3.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/vuetify": "^1.11.2",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2"
  }
}
